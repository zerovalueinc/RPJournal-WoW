<Ui xmlns="http://www.blizzard.com/wow/ui/">
  <!-- Root window -->
  <Frame name="RPBioFrame" parent="UIParent" inherits="BasicFrameTemplateWithInset" enableMouse="true" movable="true" hidden="true" frameStrata="DIALOG">
    <Size x="700" y="560"/>
    <Anchors><Anchor point="CENTER"/></Anchors>
    <Scripts>
      <OnLoad>
        self:RegisterForDrag("LeftButton");
        self.TitleText:SetText("RP Character Sheet");
        self:SetToplevel(true);
        self:SetFrameStrata("DIALOG");
      </OnLoad>
      <OnDragStart> self:StartMoving() </OnDragStart>
      <OnDragStop> self:StopMovingOrSizing() </OnDragStop>
    </Scripts>
    <Frames>
      <!-- Close (X) -->
      <Button inherits="UIPanelCloseButton">
        <Anchors><Anchor point="TOPRIGHT"><Offset x="-4" y="-4"/></Anchor></Anchors>
      </Button>

      <!-- Bottom controls -->
      <Button name="RPBioSaveButton" inherits="UIPanelButtonTemplate" text="Save">
        <Size x="140" y="24"/>
        <Anchors><Anchor point="BOTTOMLEFT"><Offset x="12" y="12"/></Anchor></Anchors>
        <Scripts><OnClick> if RPBio_Save then RPBio_Save() end </OnClick></Scripts>
      </Button>
      <Button inherits="UIPanelButtonTemplate" text="Close">
        <Size x="140" y="24"/>
        <Anchors><Anchor point="BOTTOMRIGHT"><Offset x="-12" y="12"/></Anchor></Anchors>
        <Scripts><OnClick> self:GetParent():Hide() </OnClick></Scripts>
      </Button>

