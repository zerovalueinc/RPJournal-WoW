      <ScrollFrame name="RPBioScroll" inherits="UIPanelScrollFrameTemplate">
        <Anchors>
          <Anchor point="TOPLEFT"><Offset x="12" y="-28"/></Anchor>
          <Anchor point="BOTTOMRIGHT"><Offset x="-28" y="48"/></Anchor>
        </Anchors>
